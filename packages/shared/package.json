{
  "name": "@repo/shared",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles/globals.css": "./dist/styles/globals.css",
    "./ui/*": {
      "types": "./src/ui/*.ts",
      "default": "./dist/ui/*.js"
    },
    "./assets/*": {
      "types": "./src/assets/*",
      "default": "./dist/assets/*"
    },
    "./api/*": {
      "types": "./src/api/*.ts",
      "default": "./dist/api/*.js"
    },
    "./types/*": {
      "types": "./src/types/*.ts",
      "default": "./dist/types/*.js"
    },
    "./lib/*": {
      "types": "./src/lib/*.ts",
      "default": "./dist/lib/*.js"
    }
  },
  "typesVersions": {
    "*": {
      "ui/*": [
        "./src/ui/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "api/*": [
        "./src/api/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "lib/*": [
        "./src/lib/*"
      ]
    }
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles/globals.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles/globals.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.5",
    "@types/react": "^19.1.0",
    "eslint": "^9.33.0",
    "tailwindcss": "^4.1.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "tailwind-merge": "^3.3.1"
  }
}
